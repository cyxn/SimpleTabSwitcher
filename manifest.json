{
  "manifest_version": 2,

  "name": "SimpleTabSwitcher",
  "description": "use option(alt) + 1...9 to change current tab. 9 â€” always last tab",
  "version": "0.1",

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],

  "permissions": [
    "tabs",
    "activeTab",
    "http://*/*",
    "https://*/*"
  ]
}
