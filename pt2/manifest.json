{
  "manifest_version": 2,

  "name": "SimpleTabSwitcher-pt2",
  "description": "use option(alt) + 1...9 to change current tab. 9 â€” always last tab",
  "version": "0.1.3",

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],

  "commands": {
    "change-tab:4": {
      "suggested_key": {
        "default": "Alt+4",
        "mac": "Alt+4"
      },
      "description": "Change to tab number 4"
    },
    "change-tab:5": {
      "suggested_key": {
        "default": "Alt+5",
        "mac": "Alt+5"
      },
      "description": "Change to tab number 5"
    },
    "change-tab:6": {
      "suggested_key": {
        "default": "Alt+7",
        "mac": "Alt+6"
      },
      "description": "Change to tab number 6"
    },
    "change-tab:7": {
      "suggested_key": {
        "default": "Alt+8",
        "mac": "Alt+7"
      },
      "description": "Change to tab number 7"
    }
  },

  "permissions": ["tabs", "activeTab", "http://*/*", "https://*/*"]
}
